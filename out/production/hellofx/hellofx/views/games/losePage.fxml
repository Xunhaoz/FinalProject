<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="hellofx.Controller.gameControllers.LosePageController"
            prefHeight="720.0" prefWidth="1280.0">
    <ImageView fitHeight="720.0" fitWidth="1280.0">
        <Image url="@../../resource/GameImgs/gameover.png"/>
    </ImageView>
    <Button fx:id="backButton" mnemonicParsing="false" layoutX="30.0" layoutY="30.0" onAction="#gameToLevel"
            stylesheets="@../../styles/buttons.css"/>
    <HBox alignment="CENTER" layoutY="105" prefHeight="615.0" prefWidth="1280.0">
        <Button styleClass="button" stylesheets="@../../styles/buttons.css" fx:id="restart" mnemonicParsing="false" layoutY="500.0" layoutX="520.0" onAction="#backToGame"
                text="再次挑戰" textFill="azure" alignment="CENTER" style="-fx-background-color: #0e0e20; -fx-background-radius: 20.0;">
            <font>
                <Font size="36.0"/>
            </font>
        </Button>
    </HBox>
</AnchorPane>
