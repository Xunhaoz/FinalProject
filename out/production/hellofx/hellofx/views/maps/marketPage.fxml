<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<AnchorPane maxHeight="Infinity" maxWidth="Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="hellofx.Controller.MarketController">
    <AnchorPane prefHeight="720.0" prefWidth="1280.0">
        <ImageView fitHeight="720.0" fitWidth="1280.0">
            <Image url="@../../resource/market/marketBackground.png"/>
        </ImageView>
        <Button fx:id="backButton"
                layoutX="30.0" layoutY="30.0"
                mnemonicParsing="false"
                onAction="#marketToMap"
                stylesheets="@../../styles/buttons.css" />
        <HBox alignment="CENTER_RIGHT" layoutX="980.0" layoutY="30.0"
              spacing="10.0" prefWidth="300.0" prefHeight="55.0">
            <padding>
                <Insets right="30.0"/>
            </padding>
            <ImageView fitHeight="55.0" fitWidth="55.0">
                <Image url="@../../resource/icecream.png" />
            </ImageView>
            <Label fx:id="iceCreamLabel" text="000000">
                <font>
                    <Font size="36.0" />
                </font>
            </Label>
        </HBox>
        <HBox layoutY="290.0" alignment="BOTTOM_CENTER"
              prefWidth="1240.0" prefHeight="250" spacing="25.0">
            <Button stylesheets="@../../styles/buttons.css"
                    styleClass="foodButton" onAction="#marketToRice"
                    fx:id="rice" mnemonicParsing="false">
                <graphic>
                    <ImageView>
                        <Image url="@../../resource/market/rice.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button stylesheets="@../../styles/buttons.css"
                    styleClass="foodButton" onAction="#marketToHam"
                    fx:id="ham" mnemonicParsing="false">
                <graphic>
                    <ImageView>
                        <Image url="@../../resource/market/ham.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button stylesheets="@../../styles/buttons.css"
                    styleClass="foodButton" onAction="#marketToCoffee"
                    fx:id="coffee" mnemonicParsing="false">
                <graphic>
                    <ImageView>
                        <Image url="@../../resource/market/coffee.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <HBox layoutY="510.0" alignment="BOTTOM_CENTER"
              prefHeight="38.0" prefWidth="1180.0" spacing="210.0">
            <Label prefWidth="102.0" prefHeight="38.0"
                   styleClass="label" stylesheets="@../../styles/label.css"
                   text="🍦 160">
                <padding>
                    <Insets left="15.0"/>
                </padding>
                <font>
                    <Font size="20.0"/>
                </font>
            </Label>
            <Label prefWidth="102.0" prefHeight="38.0"
                   styleClass="label" stylesheets="@../../styles/label.css"
                   text="🍦 285">
                <padding>
                    <Insets left="15.0"/>
                </padding>
                <font>
                    <Font size="20.0"/>
                </font>
            </Label>
            <Label prefWidth="102.0" prefHeight="38.0"
                   styleClass="label" stylesheets="@../../styles/label.css"
                   text="🍦 95">
                <padding>
                    <Insets left="25.0"/>
                </padding>
                <font>
                    <Font size="20.0"/>
                </font>
            </Label>
        </HBox>
    </AnchorPane>
</AnchorPane>
