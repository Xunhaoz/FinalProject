<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="735.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hellofx.Controller.gameControllers.secondLevelController">
    <ScrollPane hbarPolicy="ALWAYS" nodeOrientation="LEFT_TO_RIGHT" pannable="true" prefHeight="735.0" prefWidth="1280.0" vbarPolicy="NEVER">
        <AnchorPane fx:id="anchorPane" prefHeight="720.0" prefWidth="2560.0">
            <ImageView fitHeight="720.0" fitWidth="2560.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../resource/GameImgs/levelTwoBackground.png" />
            </ImageView>
            <Label fx:id="csieHealthLable" alignment="CENTER" layoutX="20.0" layoutY="140.0" prefWidth="200.0" textFill="azure" />
            <Label fx:id="grandpaHealthLable" alignment="CENTER" layoutX="2340.0" layoutY="140.0" prefWidth="200.0" textFill="azure" />
            <ProgressBar fx:id="csieTowerHP" layoutX="20.0" layoutY="160.0" prefWidth="200.0" />
            <ProgressBar fx:id="grandpaTowerHP" layoutX="2340.0" layoutY="160.0" prefWidth="200.0" />
        </AnchorPane>
    </ScrollPane>

    <Button fx:id="backButton" layoutX="30.0" layoutY="30.0" mnemonicParsing="false" onAction="#levelTwoToLevel" stylesheets="@../../styles/buttons.css" />
    <HBox alignment="BOTTOM_CENTER" layoutY="545.0" prefHeight="175.0" prefWidth="1280.0" spacing="60.0">
        <Button onAction="#economic" fx:id="levelButton" mnemonicParsing="false" prefHeight="175.0">
            <font>
                <Font size="24.0" />
            </font>
         <graphic>
            <ImageView fx:id="economicImg" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../resource/gameButton/economy/economy0.png" />
               </image>
            </ImageView>
         </graphic>
        </Button>
        <HBox fx:id="hBox" alignment="CENTER" layoutY="545.0" prefHeight="175.0" spacing="15.0">
            <children>
                <Button mnemonicParsing="false" onAction="#createFreshChick">
                    <graphic>
                        <ImageView fitHeight="75.0" fitWidth="100.0">
                            <image>
                                <Image url="@../../resource/role/Hero/freshChick/miniFreshChick.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button mnemonicParsing="false" onAction="#createSalmonSteak">
                    <graphic>
                        <ImageView fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../resource/role/Hero/salmonSteak/miniSalmonSteak.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button mnemonicParsing="false" onAction="#createYams">
                    <graphic>
                        <ImageView fx:id="yamsImg" fitHeight="75.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../resource/role/Hero/yams/miniYams.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button onAction="#createAlienThrowingHand" mnemonicParsing="false">
                    <graphic>
                        <ImageView fitHeight="75.0" fitWidth="100.0">
                            <image>
                                <Image url="@../../resource/role/Hero/alienThrowingHand/miniAlien.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button onAction="#creatXunhaoz" mnemonicParsing="false">
                    <graphic>
                        <ImageView fitHeight="75.0" fitWidth="100.0">
                            <image>
                                <Image url="@../../resource/role/Hero/Xunhoaz/miniXunhaoz.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button mnemonicParsing="false">
                    <graphic>
                        <ImageView fitHeight="75.0" fitWidth="100.0">
                            <image>
                                <Image url="@../../resource/role/Hero/freshChick/miniFreshChick.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
        <Button onAction="#shootBoom" mnemonicParsing="false" prefHeight="175.0">
            <font>
                <Font size="24.0" />
            </font>
         <graphic>
            <ImageView fx:id="fastFoodImg" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../resource/gameButton/boom/boom0.png" />
               </image>
            </ImageView>
         </graphic>
        </Button>
    </HBox>
    <HBox alignment="CENTER" layoutX="980.0" layoutY="30.0" spacing="10.0">
        <ImageView fitHeight="55.0" fitWidth="55.0">
            <Image url="@../../resource/fastfood.png" />
        </ImageView>
        <Label fx:id="label" text="0000" textFill="azure">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
        <Label text="/" textFill="azure">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
        <Label fx:id="labelMax" text="1000" textFill="azure">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
    </HBox>
    <HBox alignment="CENTER" layoutX="105.0" layoutY="30.0" spacing="10.0">
        <ImageView fitHeight="55.0" fitWidth="55.0">
            <Image url="@../../resource/icecream.png" />
        </ImageView>
        <Label fx:id="iceCreamLabel" text="00000" textFill="azure">
            <font>
                <Font size="36.0" />
            </font>
        </Label>
    </HBox>
</AnchorPane>
